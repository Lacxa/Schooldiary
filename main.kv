ScreenManager
    id:manager
    MDScreen:
        on_enter:
            app.display_student()
        name:"inclass"
        MDBoxLayout:
            orientation: "vertical"
            MDTopAppBar:
                title: "class name"
                specific_text_color:78/255, 82/255, 84/255, 1
                md_bg_color:1, 1, 1, 1
                right_action_items: [["segment", lambda x: app.screen_capture("activity")]]

            MDTabs:
                allow_stretch:False
                background_color:1, 1, 1, 1
                indicator_color:36/255, 146/255, 255/255, 1
                tab_hint_x:True
                text_color_active:78/255, 82/255, 84/255, 1
                text_color_normal:.5, .5, .5, 1

                Tab:
                    title: "Student"
                    FloatLayout:
                        RecycleView:
                            id: studs
                            key_viewclass: 'viewclass'
                            key_size: 'height'
                            pos_hint:{"top":.99}
                            RecycleBoxLayout:
                                id:wali
                                spacing:dp(4)
                                padding: dp(10)
                                default_size: None, dp(55)
                                default_size_hint: 1, None
                                size_hint_y: None
                                height: self.minimum_height
                                orientation: 'vertical'

                        MDIconButton:
                            icon:"account-plus"
                            pos_hint:{"center_x":.89,"center_y":.1}
                            user_font_size:"55sp"
                            theme_text_color: "Custom"
                            text_color: 1,1,1,1
                            md_bg_color: 36/255, 146/255, 255/255, 1
                            on_release:
                                app.screen_capture("student")
                Tab:
                    title: "Attendence"
                    FloatLayout:
                        RecycleView:
                            id: attend
                            key_viewclass: 'viewclass'
                            key_size: 'height'
                            pos_hint:{"top":.99}
                            RecycleBoxLayout:
                                id:wali
                                spacing:dp(4)
                                padding: dp(10)
                                default_size: None, dp(55)
                                default_size_hint: 1, None
                                size_hint_y: None
                                height: self.minimum_height
                                orientation: 'vertical'


    MDScreen:
        name:"activity"
        MDBoxLayout:
            orientation: "vertical"
            MDTopAppBar:
                title: "Activities"
                specific_text_color:78/255, 82/255, 84/255, 1
                md_bg_color:1, 1, 1, 1


            MDTabs:
                allow_stretch:False
                background_color:1, 1, 1, 1
                indicator_color:36/255, 146/255, 255/255, 1
                tab_hint_x:True
                text_color_active:78/255, 82/255, 84/255, 1
                text_color_normal:.5, .5, .5, 1

                Tab:
                    title: "Homework"
                    FloatLayout:
                        MDLabel:
                            bold:True
                            text:'Today Homework'
                            halign:"center"
                            font_style:'H6'
                            pos_hint:{'center_x':.5, 'center_y':.9}
                            theme_text_color: "Custom"
                            text_color: 83 / 225, 186 / 225, 115 / 225, 1
                            height: self.texture_size[1]
                            width: self.texture_size[1]
                        MDTextField:
                            id:cls
                            mode: "rectangle"
                            fill_color: 0, 0, 0, .4
                            size_hint: .6, .1
                            pos_hint:{'center_x':.5, 'center_y':.8}
                            hint_text:"Class Name:"
                            text_color: 0, 0, 0, 1
                            font_size: dp(15)
                        MDTextField:
                            id:work
                            mode: "rectangle"
                            fill_color: 0, 0, 0, .4
                            size_hint: .6, .1
                            pos_hint:{'center_x':.5, 'center_y':.67}
                            hint_text:"subject: Math, Eng"
                            text_color: 0, 0, 0, 1
                            font_size: dp(15)
                        MDFillRoundFlatButton:
                            text: "Update Homework"
                            size_hint: .2, .06
                            pos_hint:{'center_x':.5, 'center_y':.55}
                            md_bg_color: 83 / 225, 186 / 225, 115 / 225, 1
                            on_release:
                                app.upd_homework(cls.text, work.text)

                Tab:
                    title: "Result"
                    FloatLayout:



    MDScreen:
        name:'home'
        FloatLayout:
            orientation:'vertical'
            MDLabel:
                bold:True
                text:'Create Class'
                halign:"center"
                font_style:'H6'
                pos_hint:{'center_x':.5, 'center_y':.8}
                theme_text_color: "Custom"
                text_color: 83 / 225, 186 / 225, 115 / 225, 1
                height: self.texture_size[1]
                width: self.texture_size[1]
            MDTextField:
                id:name
                mode: "rectangle"
                fill_color: 0, 0, 0, .4
                size_hint: .8, .1
                pos_hint:{'center_x':.5, 'center_y':.7}
                hint_text:"Class Name:"
                text_color: 0, 0, 0, 1
                font_size: dp(20)
                on_text:
                    app.class_name = name.text
            MDFillRoundFlatButton:
                text: "Add"
                size_hint: .2, .06
                pos_hint:{'center_x':.5, 'center_y':.6}
                md_bg_color: 83 / 225, 186 / 225, 115 / 225, 1
                on_release:
                    app.screen_capture("class")
                    app.add_class(name.text)


